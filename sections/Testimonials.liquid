<div class="sectionDiv">
  <h2 class="TestimonialHeadline">
  {{section.settings.TestimonialHeader}}
  </h2>
  <div id="outer">
  <div id="inner">
    <img src="https://cdn.shopify.com/s/files/1/0587/8674/2454/files/testi1.png?v=1632841480"/>
  </div>
  <div id="inner">
    <img src="https://cdn.shopify.com/s/files/1/0587/8674/2454/files/testi2.png?v=1632841480"/>
  </div>
  <div id="inner">
    <img src = "https://cdn.shopify.com/s/files/1/0587/8674/2454/files/testi3.png?v=1632841480"/>
  </div>
</div>
  <img src="{{section.settings.testimonialimage | img_url:'master'}}" style="padding-bottom:108px;"/>
  <h3 class="PressHead">We've been featured on</h3>
  <img src="{{section.settings.featuresimage | img_url:'master'}}" style="padding-bottom:108px;"/>
</div>

<style>
  #outer {
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
    scrollbar-width: none;
}
#inner {
  display: inline-block;
  white-space: normal;
  width: 370px;
  padding: 10px;
  margin: 20px;
  
}
</style>
{% schema %}
{
	"name": "Testimonials",
	"settings": [{
			"type": "text",
			"id": "TestimonialHeader",
			"label": "Testimonial Header",
			"default": "Here's what our beta-testers are saying"
			
		},
		{
			"type": "image_picker",
			"id": "testimonialimage",
			"label": "placeholder image!!!"
		},
		{
			"type": "image_picker",
			"id": "featuresimage",
			"label": "another placeholder image!!!"
		}

	],
	"presets": [{
		"category": "image",
		"name": "Testimonials"
	}]
}
{% endschema %}

