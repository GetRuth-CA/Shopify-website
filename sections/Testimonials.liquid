<style>
  #outer {
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
    scrollbar-width: none;
    max-width:1200px;
    margin-left:auto;
  margin-right:auto;
    text-align:center;
}
#inner {
  display: inline-block;
  white-space: normal;
  width: 340px;
  margin:30px;
}
  
#desktopimg {
  display:block; 
  margin-left: auto;
margin-right: auto;}
#mobileimg {display:none}
  
@media only screen and (max-width: 699px) {
    #desktopimg {display: none;}
    #mobileimg {display: block; margin-left:auto;margin-right:auto; padding-bottom:6rem;}
}
</style>
{% schema %}
{
	"name": "Testimonials",
	"settings": [{
			"type": "text",
			"id": "TestimonialHeader",
			"label": "Testimonial Header",
			"default": "Here's what our beta-testers are saying"
			
		},
		{
			"type": "image_picker",
			"id": "testimonialimage",
			"label": "placeholder image!!!"
		},
		{
			"type": "image_picker",
			"id": "featuresimage",
			"label": "another placeholder image!!!"
		}

	],
	"presets": [{
		"category": "image",
		"name": "Testimonials"
	}]
}
{% endschema %}

