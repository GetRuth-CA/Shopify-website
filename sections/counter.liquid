<div class="page" style="padding-top:0px;"><div class="rte">
<div class="counter">
    <div class="counterCol">
        <img
            class="counterimg"
            src="https://cdn.shopify.com/s/files/1/0587/8674/2454/files/pads_icon_089718c5-110f-4ade-bfd3-78fc9b6ebd7a.png?v=1635907882"
        />
        <h1 class="counterNum">{{ section.settings.donated }}</h1>
        <h6 class="specialH6">Pads donated</h6>
    </div>
    <div class="counterCol">
        <img
            class="counterimg"
            src="https://cdn.shopify.com/s/files/1/0587/8674/2454/files/susty_icon_af2de7ee-c58b-4f11-abd2-cae63e95f796.png?v=1635907882"
        />
        <h1 class="counterNum">{{ section.settings.plastics }}</h1>
        <h6 class="specialH6">Kilograms of plastics diverted</h6>
    </div>
</div>
  </div></div>

<style>
  
  .counterNum {
  margin: 5px 0;  font-size:70px;
  
  }
  .counterimg{
  width: 60px;
    height:60px;
  }
  .counter {
  display:flex;
  text-align:center;
  justify-content:center;
  margin: 0 auto;
  max-width: 600px;
  }
  
  .counterCol {
  display:block;
  margin: 20px 40px;
  }

.sectionDivBottom{
  	max-width:1200px;
  	margin: 0px auto;
    height:100%;
  padding-bottom: 50px;">
}
  
  @media only screen and (max-width: 800px) {
  .counter {
    
    display:block;}
    
    .counterNum{
    font-size:60px;
    }
    .counterCol {width:80%; margin: 40px auto;}
  }
</style>
