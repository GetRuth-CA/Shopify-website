<style>

.image-with-text--full_background{
  background-image: url("{{section.settings.image1| image_url: master}}");
  height:750px;
    background-position: center right;
    background-size: cover;
    
  }
  
  
  .lightbutton{
  color:#5D633B;
    background-color:#fff;
    box-shadow:8px 8px #5D633B;
    padding:22px 32px;
    margin-top:40px;

  
  }
  
  .lightbutton:hover{
  color:#fff;
    background-color:#5D633B;
  box-shadow:0px 0px 0 0rem #5D633B;
  }
  
    
  .header2stuff{
  font-family:"montserrat-v18-latin-600"!important;
  font-size:50px;
  color:#fff;
   text-shadow: 3px 3px 7px #5D633B;
  }
  
  .image-with-text__inner{
  padding:12rem 6rem;
  
  }
  
  .image-with-text__text{
  color:#fff;
   text-shadow: 3px 3px 7px #5D633B;
  font-family:"montserrat-v18-latin-600"!important;
  font-size:17px;
  }
  
  .mobileimg{
  display:none;
     background-image:url("{{section.settings.image2| image_url: master}}");
 height:300px;

  /* Position and center the image to scale nicely on all screens */
  background-position: center right;
  background-repeat: no-repeat;
  background-size: contain;
  position: relative;
  }
  
  .grid--2-col-tablet {
  grid-template-columns: repeat(1,1fr);
}
  
  
  @media only screen and (max-width: 600px) {
    
    .mobileimg{
      display:block;}
    
    .image-with-text--full_background{
    background-image:none;
    }
    
    .header2stuff{
    font-size:30px;
      color:#768052;
    margin:0rem 3.2rem;
      text-shadow:unset;
    }
    
    .image-with-text__text{
    	color:#768052;
      font-size:15px;
      margin:0rem 3.2rem;
      text-shadow:unset;
    }
    
    .lightbutton{
  color:#fff;
    background-color:#768052;
    box-shadow:8px 8px #C1CC7A;
    
    
margin:40px 3.2rem;
  
  }
    
    .image-with-text__inner{
  padding:5rem 1rem;
  
  }
    
    .image-with-text--full_background{
    height:unset;
    
    }
    
  }
</style>

