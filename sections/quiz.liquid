<div class="greenSection">
    <div class="sectionDiv">
    <h1 class="BeigeHeader">{{section.settings.SectionHeading}}</h1>
      <p class="columnHead" style="color:#768052;text-align:center">{{section.settings.Sectiontext}}</p>
      <div class="section group">
        {% for item in section.settings.featuredcoll.products %}
        <a href="{{item.url}}">
          <div class="colProd span_1_of_3">
            <img src="{{item.featured_image | img_url: "master"}}" class="ProductImages"/>
            <br/>
            <p class="ProductTitle">{{item.title}}</p>
            <p>{{item.price | money }}</p>
          </div>
        </a>
        
          {% render 'product-form',
          section_id: {{section.id}},
          product: item,
          current_variant: first_available_variant,
          enable_dynamic_checkout: true,
          show_quantity_selector: true,
          show_success_message: true
          %}
        
        {% endfor %}
        
      </div>
    </div>
</div>

<style>
.ProductTitle{
  font-family: "montserrat-v18-latin-600"!important;
  color:#768052;
  font-size: 20px;
  padding-top: 29px;
  padding-bottom: 20px;
  margin: 0px;
}
.ProductImages{
  width: 268px;
  
  box-shadow: 15px 15px 30px #0000002C;
  transition: transform .2s; /* Animation */
}

/* .ProductImages:hover{
  transform: scale(1.05);
} */
/*  SECTIONS  */
.section {
	clear: both;
	padding: 0px;
	margin: 0px;
  
}

/*  COLUMN SETUP  */
.colProd {
	display: inline-block;
	margin: 1% 0 1% 2%;
  text-align: center;
  transition: transform .2s; /* Animation */;
}
.colProd:first-child { margin-left: 0; }

.colProd:hover{
  transform: scale(1.05);
}

/*  GRID OF THREE  */
.span_3_of_3 { width: 100%; }
.span_2_of_3 { width: 66%; }
.span_1_of_3 { width: 32%; }

/*  GROUPING  */
.group:before,
.group:after { content:""; display:table; }
.group:after { clear:both;}
.group { zoom:1; /* For IE 6/7 */ }

/*  GO FULL WIDTH BELOW 480 PIXELS */
@media only screen and (max-width: 880px) {
	.colProd {  margin: 1% 0 1% 0%; display:inline-block;}
	.span_3_of_3, .span_2_of_3, .span_1_of_3 { width: 100%; }
}
</style>
    
    {% schema %}
      {
        "name": "quiz section",
        "settings": [
                    
                        {
                            "type": "text",
                            "id": "SectionHeading",
                            "label": "Section Heading"
                        },
                        {
                            "type": "text",
                            "id": "Sectiontext",
                            "label": "Section text"
                        },
                        {
                          "type": "collection",
                          "id": "featuredcoll",
                          "label": "featured"
                        }
        ],
        "presets": [
                      {
                        "category":"image",
                        "name":"Quiz section"
    
                      }
    
    ]
      }
    {% endschema %}
    
    
    